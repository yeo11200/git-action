{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": [
        "dom",
        "es6"
      ],
      "outDir": "dist",         
      "rootDir": "src",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,                     
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
    ]
  }